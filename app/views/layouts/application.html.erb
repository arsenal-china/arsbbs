<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : t(:site_title) %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="user_nav">
        <% if current_user %>
          <%=t :logged_in_1 %><%= current_user.username %><%=t :logged_in_2 %><%= link_to t(:logout), logout_path %><%=t :logged_in_3 %>
        <% else %>
          <%=t :guest_1 %><%= link_to t(:signup), signup_path %><%=t :guest_2 %><%= link_to t(:login), login_path %><%=t :guest_3 %>
        <% end %>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>