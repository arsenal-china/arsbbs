<%= form_tag sessions_path do %>
  <%= label_tag :email, t(:log_email), :class => :label %>
  <%= text_field_tag :email, nil, :class => :textbox %><br />
  <%= label_tag :password, t(:log_pass), :class => :label %>
  <%= password_field_tag :password, nil, :class => :textbox %><br />
  <%= submit_tag t(:login), :class => :button %>
<% end %>
